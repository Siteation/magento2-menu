<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">

        <field name="blank_target">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Fary\SimpleMenu\Model\Config\Source\YesNo</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">105</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Open in new tab</item>
                </item>
            </argument>
        </field>

        <field name="navigation_type">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Fary\SimpleMenu\Model\Config\Source\NavigationTypeList</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">110</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Navigation Type</item>
                </item>
            </argument>
        </field>

        <field name="cms_page">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Fary\SimpleMenu\Model\Config\Source\CMSPageList</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">120</item>
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">CMS Page</item>
                </item>
            </argument>
        </field>

        <field name="static_link">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">130</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="label" xsi:type="string" translate="true">Static Link</item>
                </item>
            </argument>
        </field>

        <field name="mega_menu_attributes">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Fary\SimpleMenu\Model\Config\Source\AttributeList</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">140</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="label" xsi:type="string" translate="true">Attributes</item>
                </item>
            </argument>
        </field>

        <field name="is_mega_menu">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Fary\SimpleMenu\Model\Config\Source\YesNo</item>
                <item name="config" xsi:type="array">
                    <item name="sortOrder" xsi:type="number">150</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="label" xsi:type="string" translate="true">Mega Menu</item>
                </item>
            </argument>
        </field>

        <field name="promo_block">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="source" xsi:type="string">block</item>
                    <item name="label" xsi:type="string">Mega Menu Block</item>

                    <item name="template" xsi:type="string">ui/form/field</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                    <item name="dataScope" xsi:type="string">promo_block</item>
                    <item name="sortOrder" xsi:type="number">160</item>
                    <item name="rows" xsi:type="number">8</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>